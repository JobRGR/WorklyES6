.avatar-name
  display flex
  align-items center
  &-info
    display inline-block
    position relative
    vertical-align top
    height 100%
    font-family 'sans-serif'
    font-weight 400
    margin 0 30px
  &-title
    font-size 24px
    margin 0
  &-label
    font-size 18px
    font-style italic
    cursor pointer
    text-decoration underline
  &-subtitle
    font-size 18px
    color grey
  &-delim
    font-size 18px
    margin 0 5px