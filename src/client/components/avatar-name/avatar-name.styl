.avatar-name
  display flex
  align-items center
  &-info
    display inline-block
    position relative
    vertical-align top
    height 100%
    font-family 'sans-serif'
    font-weight 400
    margin 0 30px
  &-title
    font-size 24px
    color: '#5a5b5f'
    margin 0
  &-label
    font-size 18px
    cursor pointer
    color #00BCD4
    margin-top 8px
    margin-bottom 8px
    text-decoration underline
  &-subtitle
    font-size 18px
    color grey
    font-weight 300
  &-delim
    font-size 18px
    color grey
    font-weight 300
    margin 0 5px