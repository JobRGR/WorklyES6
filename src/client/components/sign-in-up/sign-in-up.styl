.sign
  display block
  &_center-block
    position relative
    top 50%
    transform translateY(-50%)
  &_text
    display block
    width 100%
    margin-bottom 20px
    text-align center
    &_title
      display block
      font-weight 400
      margin-bottom 15px
      font-size 26px
    &_sub
      display block
      width 300px
      line-height 21px
      font-weight 300
      font-size 16px
      margin 0 auto
