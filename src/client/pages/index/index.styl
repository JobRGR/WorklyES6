.index
  width calc(100% - 400px)
  height 100%
  overflow hidden
  &-logo
    color #fff
    font-size 30px
    display block
    margin 20px 0 0 20px
    font-family 'Pacifico'
  &-head
    width 100%
    height 100%
    overflow hidden
    background #00bcd4
  &-text
    position relative
    top 40%
    transform translateY(-50%)
    width 100%
    text-align center
    color #fff
    h1
      font-size 70px
      font-weight 400
      margin-top 5px
      margin-bottom 0
    h3
      margin-top 10px
      font-size 30px
      font-weight 300
