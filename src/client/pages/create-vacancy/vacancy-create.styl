.vacancy-create
  width 80%
  padding 40px
  max-width 1200px
  margin 50px auto
  & .vacancy-create-avatar
    margin-bottom 40px
    top 25px
    position relative
  &_left-side
    display inline-block
    width 60%
    & .skill-item
      display inline-block
      padding 5px 8px 5px 8px
      margin-top 8px
      margin-right 8px
      border-radius 5px
      background-color #00bcd4
      color #ffffff
      font-weight 300
    & .add-skill-btn
      margin-left 20px
      position relative
    & .add-skill
      display inline-block
      white-space nowrap
      margin-left 5px
    & .skill-wrapper
      margin-top 10px
      margin-bottom 10px
    & .preview-block
      position relative
      box-sizing border-box
      width 100%
      min-height 30px
      margin-top 20px
      font-size 16px
      font-family sans-serif
      line-height 24px
      &:before
        content 'preview'
        position absolute
        color #00bcd4
        width 100%
        font-size 14px
        height 16px
        line-height 16px
        left 0
        top -20px
  &_right-side
    display inline-block
    vertical-align top
    margin-left 5%
    width 35%