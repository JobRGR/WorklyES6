.company-image
.company-banner
  width 100%
  height 300px
  color #8BC34A
  font-family 'sans-serif'
  font-weight 700
  font-size 70px
  line-height 300px
  background-size auto 50%
  text-shadow: 1px 1px 2px black
  text-align center

.company-image
  position absolute
  z-index -1

.company-banner
  background-color rgba(0, 0, 0, 0.6)

.view-user
  width 100%
  max-width 1000px
  margin 20px auto 50px
  font-family 'sans-serif'
  &_left-side
    display inline-block
    width 60%
    & .company-about
      margin-top 20px
      font-size 16px
    & .company-prop
      display flex
      align-items center
      margin-left 5px
      font-size 18px
  &_right-side
    display inline-block
    vertical-align top
    margin-left 5%
    width 35%
    & .vacancy-item
      font-family 'sans-serif'
      font-size 16px
      font-style italic
      padding 10px
      transition all 0.5s ease-out
      cursor pointer
      &:hover
        background-color #8BC34A
        color #ffffff