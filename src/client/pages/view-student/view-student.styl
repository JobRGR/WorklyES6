.view-user
  width 80%
  max-width 1200px
  margin 50px auto
  padding 40px
  font-family 'sans-serif'
  &_left-side
    display inline-block
    width 50%
    & .student-about
      margin-top 40px
      margin-bottom 30px
      font-size 16px
      line-height 21px
      font-weight 300
    & .student-list-about
      font-size 14px
      line-height 21px
      font-weight 300
    & .student-subtitle
      margin-top 30px
      margin-bottom 5px
      font-weight 300
      font-size 22px
      margin-left 12px
      position relative
    & .student-item
      padding 10px
      transition all 0.5s ease-out
    & .student-dates
      margin-top 5px
      font-weight 300
      color #5a5b5f
    & .student-list-title
      font-weight 300
      margin-top 5px
      margin-bottom 4px
      color: #00bcd4
    & .student-list-speciality
      font-weight 300
      margin-top 5px
      margin-bottom 4px
  &_right-side
    display inline-block
    vertical-align top
    margin-left 10%
    width 40%
    &  .skill-item
      display inline-block
      padding 5px 8px 5px 8px
      margin-top 8px
      margin-right 8px
      border-radius 5px
      background-color #00bcd4
      color #ffffff
      font-weight 300
    & .skill-wrapper
      margin-bottom 30px